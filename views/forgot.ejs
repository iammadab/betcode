<%- include ("meta.ejs") %>
</head>
<body>
<article>
	<%- include ("header.ejs", { page: "forgot" }) %>
	<div class="main">
		<div class="container">
			<div class="content">
				<div class="title">
					<h6>Forgot Password</h6>
				</div>
				<form class="login login-form" autocomplete="off">

					<div class="form-group">
						<input class="form-control form-control-lg" name="identifier" type="text" placeholder="Username or Email Address">
					</div>

					<div class="form-group">
						<input class="form-control form-control-lg" name="whatsapp" type="text" placeholder="Enter OTP">
					</div>

					<div class="terms">Didn't get OTP sent to 0908****13? Resend in 
						<a href="/forgot">30 seconds</a></a>
					</div>

					<div class="form-group">
						<input class="form-control form-control-lg" name="password" type="password" placeholder="New Password">
					</div>
					<div class="form-group">
						<input class="form-control form-control-lg" name="password" type="password" placeholder="Confirm Password">
					</div>
					<div class="form-group" align="center">
						<button id="submit" type="submit" class="login-button btn btn-book">
              				<span class="login-text">Change</span>
			            </button>
					</div>
				</form>
			</div>
		</div>
	</div>

  <script src="/js/script.js"></script>
  <script src="/js/pages/login.js"></script>
	<%- include ("footer.ejs") %>
</article>
<%- include ("end.ejs") %>
