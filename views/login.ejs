<%- include ("meta.ejs") %>
</head>
<body>

<article>

	<%- include ("header.ejs", { page: "login" }) %>
	
	<div class="main">
		
		<div class="container">

			<div class="content">

				<div class="title">
					<h6>Enter Account</h6>
				</div>

				<form class="login login-form">

          <div id="success" style="display: none" class="login-success alert alert-success" role="alert">
            Tip posted and you can copy share link below
          </div>

          <div id="error" style="display: none" class="login-error alert alert-danger" role="alert">
            Tip posted unsuccessfully, please try again later 
          </div>

					<div class="form-group">
						<input class="form-control form-control-lg" name="identifier" type="text" placeholder="Username">
					</div>
					
					<div class="form-group">
						<input class="form-control form-control-lg" name="password" type="password" placeholder="Password">
					</div>

					<div class="form-group">
						<button id="submit" type="submit" class="login-button btn btn-success">
              <span class="login-text">Login</span>
            </button>
					</div>

					<div class="divider">
						<span></span>
						<span>OR</span>
						<span></span>
					</div>

					<div class="text-center mb-3">Don't have an account yet? <a href="/register">Sign Up</a></div>

				</form>

			</div>
			
		</div>
	
	</div>

  <script src="/js/script.js"></script>
  <script src="/js/pages/login.js"></script>

	<%- include ("footer.ejs") %>

</article>

<%- include ("end.ejs") %>
