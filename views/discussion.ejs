<div class="title two">
	<h6>Discussions (<%= comments.length %>)</h6>
	<span>Post a comment, booking code or an edit</span>
</div>

<ul class="discuss">
	
  <% for(comment of comments){ %>
	<li>
		<div class="t_header">
			<img src="<%= comment.user.picture %>" alt="<%= comment.user.username %>">
			<div class="t_details">
				<h6><%= comment.user.username %></h6>
				<span><%= comment.date %></span>
			</div>
		</div>
		<div class="t_main">
			<p><%= comment.comment %></p>
		</div>
	</li>
  <% } %>

</ul>	

<div class="login">
	<div class="form-group">
		<textarea class="form-control comment-box" placeholder="Say something"></textarea>
	</div>
	<div class="form-group">

    <% if(loggedIn){ %>
		<button id="submit" data-post="<%= tip._id %>" type="submit" class="btn btn-success comment-button">
			<span class="post-text">Post</span>
		</button>
    <% } %>

    <% if(!loggedIn){ %>
		<a href="#post" class="btn btn-success">Post</a>
    <% } %>

	</div>
</div>
