<div class="title two">
	<h6>Discussions (<%= comments.length %>)</h6>
</div>
<ul class="discuss">
	
  <% for(comment of comments){ %>
	<li>
		<div class="t_header">
			<img src="<%= comment.user.picture %>" alt="<%= comment.user.username %>">
			<div class="t_details">
				<h6><%= comment.user.username %></h6>
				<span>an hour ago</span>
			</div>
		</div>
		<div class="t_main">
			<p><%= comment.comment %></p>
		</div>
	</li>
  <% } %>

</ul>	

<div class="login">
	<div class="form-group">
		<textarea class="form-control" placeholder="Say something"></textarea>
	</div>
	<div class="form-group">
		<button id="submit" type="submit" class="btn btn-success">Post</button>
	</div>
</div>
