<div class="betcodes">

  <div class="divider">
    <span></span>
    <span>Get Booking Code</span>
    <span></span>
  </div>

  <div class="form-group">
    <select class="custom-select text-capitalize"> 
      <option>Choose Bookmaker</option>

      <% Object.keys(tip.bookmakers).forEach((bookmaker, i) => { %>
        <% if(tip.bookmakers[bookmaker]){ %>
          
          <% bdisplay = bookmaker %>
          <% if(bookmaker == "onexbet"){ bdisplay = "1xbet" } %>
          <% if(bookmaker == "twentytwobet"){ bdisplay = "22bet" } %>

          <option
            data-code="<%= tip.bookmakers[bookmaker] %>"
            value="<%= bookmaker %>"
          ><%= bdisplay %></option> 
        <% } %>
      <% }) %>

    </select>
  </div>

  <div style="display:none" class="copier input-group">
    <input type="text" class="form-control code-display text-uppercase" value="" readonly>
    <button class="copy-button" type="button"><i class="far fa-clone"></i>
      <span class="copy-text">Copy</span>
    </button>
  </div>

  <a href="/convert" class="btn btn-secondary">Get Booking Code <i class="fas fa-long-arrow-alt-right ml-2"></i></a>

</div>
