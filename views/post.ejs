<%- include ("meta.ejs") %>

<div id="app">
	
	<div class="main">
		
		<div class="container">

			<div class="post col-lg-7 col-md-8 col-12">
				
				<form>


					<div class="alert alert-success" role="alert">
  						Tip posted successfully
					</div>

					<div class="alert alert-danger" role="alert">
  						Tip posted unsuccessfully, please try again

					</div>

					<div class="divider">
						<span></span>
						<span>Tip Section</span>
						<span></span>
					</div>

					<div class="form-group">
						<select v-model="tipster" class="custom-select upcase">
							<option value="">Choose Tipster</option>
							<option :value="tipster.id" v-for="tipster of tipsterList">
								{{ tipster.name }}
							</option>
						</select>
					</div>

					<div class="form-group">
						<textarea v-model="description" class="form-control" placeholder="DESCRIPTION"></textarea>
					</div>

					<div class="form-group">
						<div class="custom-file">
							<input @change="handleimage" type="file" class="custom-file-input" accept='image/*'>
      						<label class="custom-file-label">CHOOSE SCREENSHOT</label>
						</div>
					</div>

					<div class="form-group">
						<input v-model="odds" class="form-control upcase" type="number" step="0.01" placeholder="Odds">
					</div>


					<div class="divider">
						<span></span>
						<span>Bet Code Section</span>
						<span></span>
					</div>

					<div class="form-group">
						<input v-model="bookmakers.bet9ja" class="form-control upcase" type="text" placeholder="Bet9ja">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.betking" class="form-control upcase" type="text" placeholder="Betking">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.sportybet" class="form-control upcase" type="text" placeholder="Sportybet">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.onexbet" class="form-control upcase" type="text" placeholder="1xbet">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.twentytwobet" class="form-control upcase" type="text" placeholder="22bet">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.nairabet" class="form-control upcase" type="text" placeholder="Nairabet">
					</div>
					

					<div class="form-group">
						<button @click="post" type="submit" class="btn btn-success">Post Tip</button>
					</div>                                                           
	
				</form>
	
			</div>

		</div>
	
	</div>

</div>

</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="https://unpkg.com/vuex@2.0.0"></script>
<script src="/js/post.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
// Add the following code if you want the name of the file appear on select
$(".custom-file-input").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});
</script>
