<%- include ("meta.ejs") %>
<title>Post Tip</title>
</head>
<body>

<div id="app">
	
	<%- include ("header_admin.ejs") %>

	<div class="main">

		<div class="container">

			<div class="post">
				
				<form>


					<div id="success" style="display: none" class="alert alert-success" role="alert">
  						Tip posted successfully
					</div>

					<div id="error" style="display: none" class="alert alert-danger" role="alert">
  						Tip posted unsuccessfully, please try again later 

					</div>

					<div class="divider mt-0 pt-0">
						<span></span>
						<span>Post Tip Below</span>
						<span></span>
					</div>

					<div class="form-group">
						<select v-model="tipster" class="custom-select">
							<option value="">Choose Tipster</option>
							<option :value="tipster.id" v-for="tipster of tipsterList">
								{{ tipster.name }}
							</option>
						</select>
					</div>

					<div class="form-group">
						<textarea v-model="description" class="form-control" placeholder="Description"></textarea>
					</div>

					<div class="form-group">
						<div class="custom-file">
							<input type="file" class="custom-file-input" accept='image/*'>
      						<label class="custom-file-label">Choose Screenshot</label>
						</div>
					</div>

					<div class="form-group">
						<input v-model="odds" class="form-control" type="number" step="0.01" placeholder="Odds">
					</div>


					<div class="divider">
						<span></span>
						<span>Booking Code</span>
						<span></span>
					</div>

					<div class="form-group">
						<input v-model="bookmakers.bet9ja" class="form-control" type="text" placeholder="Bet9ja">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.betking" class="form-control" type="text" placeholder="Betking">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.sportybet" class="form-control" type="text" placeholder="Sportybet">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.onexbet" class="form-control" type="text" placeholder="1xbet">
					</div>

					<div class="form-group">
						<input v-model="bookmakers.twentytwobet" class="form-control" type="text" placeholder="22bet">
					</div>

					<!-- <div class="form-group">
						<input v-model="bookmakers.nairabet" class="form-control" type="text" placeholder="Nairabet">
					</div> -->
					

					<div class="form-group">
						<button id="submit" type="submit" class="btn btn-success">Post</button>
					</div>                                                           
	
				</form>
	
			</div>

		</div>
	
	</div>

</div>

</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="https://unpkg.com/vuex@2.0.0"></script>
<script src="/js/post.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
// Add the following code if you want the name of the file appear on select
$(".custom-file-input").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});
</script>
