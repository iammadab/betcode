<%- include ("meta2.ejs") %>
<title>Post Conversion</title>
</head>
<body>

<div id="app">
	
	<%- include ("header_simple.ejs") %>

	<div class="main">

		<div class="container">

			<div class="content">

				<div class="title">
					<h6>Conversion</h6>
				</div>

				<div class="login">
				
					<form>


						<div id="success" style="display: none" class="alert alert-success" role="alert">
							Tip posted and you can copy share link below
						</div>

						<div id="error" style="display: none" class="alert alert-danger alert-error" role="alert">
							Tip posted unsuccessfully, please try again later 
						</div>

						<!--
						<div id="linker" style="display: none" class="input-group mb-3">
							<input type="text" class="form-control form-control-lg link-input" value="" disabled>
						 	<button class="btn btn-secondary copy-button" type="button" style="border-radius:0;">Copy</button>
						</div>
			          -->

						<div id="linker" class="mb-3">
							<div class="form-group">
								<select class="custom-select custom-select-lg text-capitalize">
									<option value="">From <%= conversion.source %></option>
								</select>
							</div>
							<div class="form-group">
								<select class="custom-select custom-select-lg text-capitalize">
									<option value="">To <%= conversion.destination %></option>
								</select>
							</div>
							<div class="input-group bookmaker-copier">
    							<input type="text" class="code-input form-control text-uppercase" value="<%= conversion.code %>" readonly>
							    <button class="copy-button" type="button"><i class="fas fa-clone"></i>
							      <span class="copy-button">Copy</span>
							    </button>
  							</div>	
						</div>

						<div class="form-group">
							<select v-model="tipster" class="conversion-status custom-select custom-select-lg">
								<option value="">Choose Status</option>
								<option value="success">Done</option>
								<option value="partial">Partial</option>
								<option value="failed">Failed</option>
							</select>
						</div>

						<div class="form-group">
							<input v-model="odds" class="form-control form-control-lg text-capitalize conversion-code" type="text" step="0.01" placeholder="Enter Booking Code">
						</div>						
			            <% if(conversion.status == "pending"){ %>
									<div class="form-group">
										<button class="resolve-conversion btn btn-book">Post</button>
									</div>                                                           
			            <% } %>
            
			            <% if(conversion.status != "pending"){ %>
			            <div class="alert alert-info" role="alert">This conversion request has been resolved.</div>
			            <% } %>
		
					</form>
	
				</div>

			</div>
		
		</div>

	</div>

</div>

<input type="text" id="copyinput" style="transform: translateY(-50000px);" />

</body>
</html>

<script type="text/javascript">
  let conversionRequestId = "<%= conversion._id %>"
</script>
<script src="/js/script.js"></script>
<script src="/js/post.js"></script>
