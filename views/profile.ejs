<%- include ("meta.ejs") %>
</head>
<body>
<article>

	<%- include ("header.ejs", { page: "profile" }) %>

	<div class="main">
		<div class="container" id="app">
			
			<div class="content">
				
				<div class="title">
					<h6><%= user.username %>'s Profile</h6>
				</div>
				
				<div class="summary">
					<img src="<%= user.picture %>">
					<h5><%= user.fullname %></h5>
					<h6>@<%= user.username %></h6>
					<p><%= user.bio %></p>
					<div>
            <a href="#">Twitter</a> 
            <span class="seperator">|</span> 
            <a href="#">Telegram</a>
          </div>

          <% if(sameUser){ %>
					<div><a href="/edit" class="btn btn-light"><i class="far fa-edit"></i> Update Profile</a></div>	
          <% } %>

				</div>
			
				<div class="container_two">

          <% if(tips.length > 0){ %>
					<div class="title two">
						<h6>Recent Tips (<%= tips.length %>)</h6>
						<span>View all <!-- the tips posted by Akin Wumi --></span>
					</div>
          <% } %>

					<ul class="tips">

            <% for(tip of tips) { %>

						<li data-id="<%= tip._id %>" class="hover">
							
							<a href="<%= `/tip/${tip._id}` %>">

<% console.log(tip) %>
								<div class="t_header">
									<img src="<%= tip.tipster.picture %>" alt="<%= tip.tipster.fullname %>">
									<div class="t_details">
										<h6><%= tip.tipster.fullname %></h6>
										<span><%= tip.tipDate %></span>
									</div>
								</div>

								<div class="t_main">
									<p><%= tip.description %></p>
									<div class="t_info"><i class="far fa-bookmark"></i> <%= tip.odds %> <span>Odds</span></div>
									<div class="t_info"><i class="far fa-comment-alt"></i> <%= tip.comments %> <span>Comments</span></div>
								</div>	

							</a>	
						
						</li>

           <% } %>

					</ul>

				</div>

			</div>

		</div>

	</div>

  <script src="/js/script.js"></script> 
  <script src="/js/pages/profile.js"></script>

	<%- include ("footer.ejs") %>

</article>

<%- include ("end.ejs") %>
