<%- include ("meta.ejs") %>
</head>
<body>
<div id="app">
	<%- include ("header.ejs") %>

	<% tip = tipData.data %>

	<div class="main">

		<div class="container">

			<div class="content">

        <% const id = String(tip._id) %>
        <% const shortId = id.substr(id.length - 6) %>
				<h6 class="title">Tip #<span class="text-uppercase"><%= shortId %></span></h6>

				<hr>


				<div class="tip">
			
					<span class="tip_pic"><img src="<%= tip.tipster.image %>" alt="<%= tip.tipster.name %>"></span>

					<div class="tipmain">
				
						<h6><%= tip.tipster.name %></h6>
		
						<span><%= tip.tipDate %></span>

						<div class="sharethis-inline-share-buttons my-3"></div>

						<p><%= tip.description %></p>

						<div class="tipimg"><img src="<%= tip.image %>" /></div>

						<div class="divider">
						<span></span>
						<span>Booking codes</span>
						<span></span>
						</div>

						<ul class="betcodes">

							<% Object.keys(tip.bookmakers).forEach((bookmaker, i) => { %>
                <% if(tip.bookmakers[bookmaker]){ %>
                <li>
                  <% bdisplay = bookmaker %>
		  <% if(bookmaker == "onexbet"){ bdisplay = "1xbet" } %>
		  <% if(bookmaker == "twentytwobet"){ bdisplay = "22bet" } %>
                  <p class="text-capitalize"><%= bdisplay %></p>
                  <p class="code">
                    <% let code = tip.bookmakers[bookmaker] %>
                    <span data-bookmaker="<%= bookmaker %>"><%= code %></span>
                    <button @click="copy" class="btn btn-sm" href="#">
                      <i class="far fa-clone"></i> Copy
                    </button>
                  </p>
                </li>
                <% } %>
							<% }) %>


						</ul>

						<div class="divider mt-2">
						<span></span>
						<span>OR</span>
						<span></span>
						</div>

						<p class="mb-2"><!-- Some booking codes might be partial as some bookies might not have some of the markets in the original tip.  -->If you need the booking code from other bookmakers for this tip, <b>Make a request on</b> 
							<a href="https://t.me/bookmakr">telegram</a> or <a href="https://twitter.com/thebookmakr">twitter</a>
						</p>
				
					</div>

					<div class="odds" style="border:0;padding:0;margin:0;width:auto;"><%= tip.odds %> <span>Odds</span></div>

				</div>

			</div>

		</div>

	</div>

</div>

<%- include ("footer.ejs") %>

<input type="text" id="copyinput" style="transform: translateY(-50000px);"/>

<script src="/js/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="https://unpkg.com/vuex@2.0.0"></script>
<script src="/js/tip.js"></script>

<script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=5f2d64f1c125530012b63b0e&product=inline-share-buttons' async='async'></script>
