<%- include ("meta.ejs") %>
</head>
<body>
<article>

	<%- include ("header.ejs", { page: "home" }) %>

	<% tip = tipData %>

	<div class="main">

		<div class="container">

			<div class="content">

        		<% const id = String(tip._id) %>
        		<% const shortId = id.substr(id.length - 6) %>
				<div class="title">
					<h6>Tip #<span class="text-uppercase"><%= shortId %></span></h6>
					<a href="#disclaimer" title="Disclaimer"><i class="fas fa-exclamation-circle"></i></a>
				</div>

				<div class="s_tip">

					<div class="s_super">
						<div class="s_header">
							<img src="<%= tip.tipster.picture %>" alt="<%= tip.tipster.fullname %>" class="img">
							<div class="s_details">
								<h6><a href="/profile/<%= user.username %>"><%= tip.tipster.fullname %></a></h6>
								<span><%= tip.tipDate %></span>
							</div>
						</div>
						<div class="t_info s_info"><i class="far fa-bookmark"></i> <%= tip.odds %> <span>Odds</span></div>
					</div>

					<div class="s_main">

						<div class="sharethis-inline-share-buttons"></div>

						<p><%= tip.description %></p>

						<div class="s_img"><img src="<%= tip.image %>" /></div>

				        <% if(tip.image2){ %>
				          <div class="s_img"><img src="<%= tip.image2 %>" /></div>
				        <% } %>

				        <% if(tip.image3){ %>
				          <div class="s_img"><img src="<%= tip.image3 %>" /></div>
				        <% } %>

				        <% if(tip.image4){ %>
				          <div class="s_img"><img src="<%= tip.image4 %>" /></div>
				        <% } %>

				    </div>

				</div>

				<div class="container_two">
					<%- include ("booking.ejs") %>
					<%- include ("discussion.ejs") %>
				</div>	

			</div>

		</div>

	</div>

	<%- include ("footer.ejs") %>

</article>

<%- include ("end.ejs") %>

<input type="text" id="copyinput" style="transform: translateY(-50000px);"/>

<script src="/js/script.js"></script>
<script src="/js/tip.js"></script>

<script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=5f2d64f1c125530012b63b0e&product=inline-share-buttons' async='async'></script>
