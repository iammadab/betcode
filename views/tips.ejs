<div class="content">		

  <% banner = "" %>
  <% if(meta.tipsterName){ banner = `from ${meta.tipsterName}` } %>
	<div class="title">
		<h6>Latest Tips <%= banner %></h6> 
			<%- include ("filter.ejs") %>
	  	</div>
  
  <% if(tips){ %>	
	<ul class="tips">

		<%- include ("loader.ejs") %>

		<% for(tip of tips) { %>

		<li data-id="<%= tip._id %>" class="hover">
			
			<a href="<%= `/tip/${tip._id}` %>">

				<div class="s_super">

					<div class="t_header">
						<img src="<%= tip.tipster.picture %>" alt="<%= tip.tipster.fullname %>">
						<div class="t_details">
							<h6><%= tip.tipster.fullname %></h6>
							<span><%= tip.tipDate %></span>
						</div>
					</div>

				</div>

				<div class="t_main">
					<p><%= tip.description %></p>
					<div class="t_info"><%= tip.originalBookmaker %></div>
					<div class="t_info"><%= tip.odds %><span>Odds</span></div>
				</div>	

			</a>	
		
		</li>

		<% } %>

	</ul>
  <% } %>

	<div class="showmore tips">Show More</div>
	
</div>
